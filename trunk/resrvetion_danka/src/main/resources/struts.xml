<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.objectFactory" value="org.apache.struts2.spring.StrutsSpringObjectFactory" />
	<constant name="struts.custom.i18n.resources" value="languages.language" />

	<package name="root" namespace="/" extends="struts-default"> 
	
	    <result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
		</result-types>
		
		
		<action name="">
			<result type="redirect">/indexAction</result>
		</action> 
		
		<action name="indexAction" class="actions.IndexAction">
			<result name="success" type="tiles">tiles.index</result>
		</action>
		
		<action name="helloAction" class="actions.HelloAction">
			<result name="success" type="tiles">tiles.hello</result>
			<result name="error" type="tiles">tiles.logFail</result>
		</action>

		<!-- user manager -->
		<action name="userList" class="actions.UsersAction" method="showAllUsers">
			<result name="success" type="tiles">tiles.userList</result>
			<result name="error" type="tiles">tiles.fail</result>
		</action>
		<action name="addNewUser" class="actions.UsersAction" method="addNewUser">
			<result name="success" type="tiles">tiles.userList</result>
		</action>
		<action name="goToAddUserAction" class="actions.UsersAction" method="showAddNewUser">
			<result name="success" type="tiles">tiles.addUser</result>
		</action>	
		<action name="deleteUserAction" class="actions.UsersAction" method="deleteUser">
			<result name="success" type="tiles">tiles.userList</result>
		</action>
		<action name="updateUserAction" class="actions.UsersAction" method="updateUser">
			<result name="success" type="tiles">tiles.userList</result>
			<result name="error" type="tiles">tiles.fail</result>
		</action>	
		<action name="goToUpdateUserAction" class="actions.UsersAction" method="goToUpdateUser">
			<result name="success" type="tiles">tiles.updateUser</result>
		</action>	
		<action name="showAllUsersAction" class="actions.UsersAction" method="showAllUsers">
			<result name="success" type="tiles">tiles.userList</result>
		</action>				
		<!-- end user manager -->
		<!-- resource manager -->
		<action name="goToResourcesList" class="actions.RoomsAction" method="showResources">
			<result name="success" type="tiles">tiles.showResources</result>
		</action>
		<action name="roomsList" class="actions.RoomsAction" method="showAllRooms">
			<result name="success" type="tiles">tiles.rooms</result>
			<result name="error" type="tiles">tiles.fail</result>
		</action>
		<action name="devicesList" class="actions.DevicesAction" method="showAllDevices">
			<result name="success" type="tiles">tiles.devices</result>
			<result name="error" type="tiles">tiles.fail</result>
		</action>
		<action name="goToAddRoomAction" class="actions.RoomsAction" method="loadBuilding">
			<result name="success" type="tiles">tiles.addRoom</result>
		</action>
		<action name="goToAddDeviceAction" class="actions.DevicesAction" method="showAddDevices">
			<result name="success" type="tiles">tiles.addDevice</result>
		</action>
		<action name="addNewRoom" class="actions.RoomsAction" method="addNewRoom">
			<result name="success" type="tiles">tiles.successfulAddedRoom</result>
		</action>
		<action name="addNewDevice" class="actions.DevicesAction" method="addNewDevice">
			<result name="success" type="tiles">tiles.devices</result>
		</action>
		<action name="deleteRoomAction" class="actions.RoomsAction" method="deleteRoom">
			<result name="success" type="tiles">tiles.rooms</result>
		</action>
		<action name="goToUpdateRoomAction" class="actions.RoomsAction" method="goToUpdateRoom">
			<result name="success" type="tiles">tiles.updateRoom</result>
		</action>
		<action name="updateRoomAction" class="actions.RoomsAction" method="updateRoom">
			<result name="success" type="tiles">tiles.rooms</result>
		</action>
		
		<action name="deleteDeviceAction" class="actions.DevicesAction" method="deleteDevice">
			<result name="success" type="tiles">tiles.devices</result>
		</action>
		<action name="goToUpdateDeviceAction" class="actions.DevicesAction" method="goToUpdateDevice">
			<result name="success" type="tiles">tiles.updateDevice</result>
		</action>
		<action name="updateDeviceAction" class="actions.DevicesAction" method="updateDevice">
			<result name="success" type="tiles">tiles.devices</result>
		</action>
		<!-- end resource manager -->
		<!-- building manager -->
		<action name="buildingsList" class="actions.BuildingsAction" method="showAllBuildings">
			<result name="success" type="tiles">tiles.buildings</result> 
			<result name="error" type="tiles">tiles.fail</result>
		</action>
		<action name="goToAddBuildingAction" class="actions.BuildingsAction" method="showAddBuildings">
			<result name="success" type="tiles">tiles.addBuilding</result>
		</action>
		<action name="addNewBuilding" class="actions.BuildingsAction" method="addNewBuilding">
			<result name="success" type="tiles">tiles.buildings</result>
		</action>
		<action name="goToUpdateBuildingAction" class="actions.BuildingsAction" method="goToUpdateBuilding">
			<result name="success" type="tiles">tiles.updateBuilding</result>
		</action>
		<action name="updateBuildingAction" class="actions.BuildingsAction" method="updateBuilding">
			<result name="success" type="tiles">tiles.buildings</result>
		</action>
		<action name="deleteBuildingAction" class="actions.BuildingsAction" method="deleteBuilding">
			<result name="success" type="tiles">tiles.buildings</result>
		</action>
		<!-- end building manager -->
		<!-- reservations manager -->
		<action name="goToReservationsList" class="actions.ReservationsAction" method="showAllReservations">
			<result name="success" type="tiles">tiles.reservationList</result>
			<result name="error" type="tiles">tiles.fail</result>
		</action>
		
		<action name="goToAddRoomReservationAction" class="actions.ReservationsAction" method="goToAddRoomReservation">
			<result name="success" type="tiles">tiles.addRoomReservation</result>
		</action>
		<action name="addNewRoomReservation" class="actions.ReservationsAction" method="addNewRoomReservation">
			<result name="success" type="tiles">tiles.reservationList</result>
		</action>
		
		<action name="goToAddDeviceReservationAction" class="actions.ReservationsAction" method="goToAddDeviceReservation">
			<result name="success" type="tiles">tiles.addDeviceReservation</result>
		</action>
		<action name="addNewDeviceReservation" class="actions.ReservationsAction" method="addNewDeviceReservation">
			<result name="success" type="tiles">tiles.reservationList</result>
		</action>
		
		<action name="markResAsFinishedAction" class="actions.ReservationsAction" method="markResAsFinishedAction">
			<result name="success" type="tiles">tiles.reservationList</result>
		</action>
		<action name="searchForReservation" class="actions.ReservationsAction" method="searchForReservation">
			<result name="success" type="tiles">tiles.reservationList</result>
		</action>
		<!-- end reservations manager -->
		
		<action name="logoutAction" method="logout" class="actions.HelloAction">
			<result name="success" type="tiles">tiles.logout</result>
			<result name="error" type="tiles">tiles.fail</result>
		</action>
	</package>	
	
</struts>
