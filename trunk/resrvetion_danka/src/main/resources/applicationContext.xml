<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- KONFIGURACJA HIBERNATE BEGIN -->
	
	<!--  TUTAJ KONFIGURACJA POLACZENIA Z BAZA  -->
	<bean id="myDataSource" class="org.apache.commons.dbcp.BasicDataSource" >
	    <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
	    <property name="url" value="jdbc:mysql://localhost/reservation"/> 
	    <property name="username" value="user"/>
	    <property name="password" value="password"/>
	</bean>
	
	
	<bean id="myHibernateProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
	<property name="location">
		<value>classpath:hibernate.properties</value></property>
	</bean>
	
	<bean id="mySessionFactory" 
	class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
	    <property name="dataSource" ref="myDataSource"/>
	    <property name="mappingResources">
	        <list>
	        	<!--  TUTAJ PLIKI MAPUJACE HIBERNATE ".hbm.xml" np:  <value>hibernate/mapping/sdt/projects/todo/model/User.hbm.xml</value>-->
	        	<value>model/User.hbm.xml</value>
	        	<value>model/Reservation.hbm.xml</value>
	        	<value>model/Room.hbm.xml</value>
	        	<value>model/Device.hbm.xml</value>
	        	<value>model/Building.hbm.xml</value>
	        </list>
	    </property>
		<property name="hibernateProperties">
			<ref bean="myHibernateProperties"/>
		</property>
	</bean>
	
	<bean id="openSessionInViewInterceptor"
	    class="org.springframework.orm.hibernate3.support.OpenSessionInViewInterceptor">
	    <property name="sessionFactory">
	        <ref local="mySessionFactory"/>
	    </property>
	    <property name="flushModeName">
	        <value>FLUSH_AUTO</value>
	    </property>
	</bean>
	
	<bean id="hibernateTemplate" 
	class="org.springframework.orm.hibernate3.HibernateTemplate">
	    <property name="sessionFactory">
	        <ref bean="mySessionFactory"/>
	    </property>
	</bean>

	<!-- KONFIGURACJA HIBERNATE END -->



	<!-- KONFIGURACJA TILES BEGIN -->

	<bean id="viewResolver" class="org.springframework.web.servlet.view.UrlBasedViewResolver">
	  <property name="viewClass" value="org.springframework.web.servlet.view.tiles2.TilesView"/>	  
	</bean>
	
	<bean id="tilesConfigurer" class="org.springframework.web.servlet.view.tiles2.TilesConfigurer">
	  <property name="definitions">
	    <list>
	      <value>/WEB-INF/classes/tiles.xml</value>
	    </list>
	  </property>
	</bean>
	
	<!-- KONFIGURACJA TILES END -->
	
	<bean id="userDAO" class="dao.UserDAO">
	    <property name="hibernateTemplate">
	        <ref bean="hibernateTemplate"/>    
	    </property>
	</bean>
	
	
	<bean id="roomDAO" class="dao.RoomDAO">
	    <property name="hibernateTemplate">
	        <ref bean="hibernateTemplate"/>    
	    </property>
	</bean>	
	
	<bean id="reservationDAO" class="dao.ReservationDAO">
	    <property name="hibernateTemplate">
	        <ref bean="hibernateTemplate"/>    
	    </property>
	</bean>	
	
	<bean id="deviceDAO" class="dao.DeviceDAO">
	    <property name="hibernateTemplate">
	        <ref bean="hibernateTemplate"/>    
	    </property>
	</bean>	
	<bean id="buildingDAO" class="dao.BuildingDAO">
	    <property name="hibernateTemplate">
	        <ref bean="hibernateTemplate"/>    
	    </property>
	</bean>			
</beans>